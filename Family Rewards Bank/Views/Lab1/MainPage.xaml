<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Family_Rewards_Bank.MainPage"
             BackgroundColor="{AppThemeBinding Light=White, Dark=#121212}">

    <ScrollView>
        <Grid 
            Padding="{OnIdiom Phone='20,15', Tablet='30,20', Default='40,30'}"
            RowSpacing="20"
            VerticalOptions="Center"
            MaximumWidthRequest="{OnIdiom Phone=400, Tablet=600, Default=800}">

            <!-- Border с адаптивными размерами -->
            <Border
                Grid.Row="0"
                BackgroundColor="{AppThemeBinding Light={StaticResource PrimaryDark}, Dark=#333}"
                StrokeShape="RoundRectangle 20"
                Padding="0"
                HorizontalOptions="Fill"
                VerticalOptions="Center"
                Margin="{OnIdiom Phone='10', Tablet='15', Default='20'}">

                <VerticalStackLayout
                    Padding="{OnIdiom Phone='15', Tablet='20', Default='25'}"
                    Spacing="{OnIdiom Phone='15', Tablet='20', Default='25'}"
                    HorizontalOptions="Fill"
                    VerticalOptions="Center">

                    <Grid   ColumnDefinitions="*, Auto">


                        <!-- Заголовок с адаптивным размером шрифта -->
                        <Label Text="Choose Camera:" 
                           FontSize="{OnIdiom Phone=20, Tablet=25, Default=30}" 
                           FontAttributes="Italic,Bold"
                           TextColor="{AppThemeBinding Light=#333, Dark=#EEE}"
                           HorizontalOptions="Center"
                           Grid.Column="0"/>

                        <Button Text="Open Organizer" 
                                Clicked="openOrganizer_Clicked" 
                                HorizontalOptions="End"
                                Grid.Column="1"
                                BackgroundColor="AntiqueWhite">
                            <Button.Triggers>
                                <Trigger TargetType="Button" Property="IsPressed" Value="True">
                                    <Setter Property="Scale" Value="0.98"/>
                                </Trigger>
                            </Button.Triggers>
                        </Button>
                    </Grid>

                    <!-- Радио-кнопки с адаптивным расположением -->
                    <FlexLayout 
                        JustifyContent="SpaceEvenly">
                        <RadioButton x:Name="radioButton1" 
                                     Content="Front Camera" 
                                     GroupName="Camera"
                                     CheckedChanged="Camera_CheckedChanged"
                                     Scale="{OnIdiom Phone=0.9, Default=1.0}"/>
                        <RadioButton x:Name="radioButton2" 
                                     Content="Back Camera" 
                                     GroupName="Camera"
                                     CheckedChanged="Camera_CheckedChanged"
                                     Scale="{OnIdiom Phone=0.9, Default=1.0}"/>
                    </FlexLayout>

                    <!-- Адаптивный ввод текста + кнопка Search -->
                    <Grid ColumnDefinitions="*, Auto" 
                          RowDefinitions="Auto" 
                          ColumnSpacing="10" 
                          Margin="0">
                        <Entry x:Name="inputEntry"
                               Placeholder="Enter text"
                               BackgroundColor="{AppThemeBinding Light=#f5f5f5, Dark=#333}"
                               TextColor="{AppThemeBinding Light=Black, Dark=White}"
                               HeightRequest="{OnIdiom Phone=40, Default=45}"
                               Grid.Column="0"/>
                        <Button x:Name="searchInGoogle"   
                                Clicked="buttonSearchInGoogleCheck_Clicked" 
                                BackgroundColor="{AppThemeBinding Light=#007ACC, Dark=#0099FF}"
                                Text="Search"
                                FontAttributes="Bold"
                                TextColor="White" 
                                CornerRadius="12" 
                                Padding="{OnIdiom Phone='15,8', Default='20,10'}" 
                                Grid.Column="1"/>
                    </Grid>

                    <!-- Адаптивные кнопки действий -->
                    <VerticalStackLayout Spacing="{OnIdiom Phone=8, Default=12}">
                        <Button x:Name="buttonShowInfo" 
                                Text="Show Alert"
                                Clicked="buttonShowInfoCheck_Clicked"
                                BackgroundColor="{AppThemeBinding Light=#4CAF50, Dark=#388E3C}" 
                                TextColor="White"
                                CornerRadius="12"
                                HeightRequest="{OnIdiom Phone=40, Default=45}">
                            <Button.Triggers>
                                <Trigger TargetType="Button" Property="IsPressed" Value="True">
                                    <Setter Property="Scale" Value="0.98"/>
                                </Trigger>
                            </Button.Triggers>
                        </Button>

                        <Button x:Name="buttonPhoto" 
                                Text="Take a Photo"
                                Clicked="TakePhotoButton_Clicked"
                                BackgroundColor="{AppThemeBinding Light=#FF9800, Dark=#F57C00}" 
                                TextColor="White"
                                CornerRadius="12"
                                HeightRequest="{OnIdiom Phone=40, Default=45}">
                            <Button.Triggers>
                                <Trigger TargetType="Button" Property="IsPressed" Value="True">
                                    <Setter Property="Scale" Value="0.98"/>

                                </Trigger>
                            </Button.Triggers>
                        </Button>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Border>
        </Grid>
    </ScrollView>
</ContentPage>