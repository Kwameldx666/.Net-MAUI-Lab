<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Family_Rewards_Bank.UpdateEventPage"
             Title="Update Event"
             BackgroundColor="{AppThemeBinding Light=#F9F9F9, Dark=#121212}">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Заголовок -->
            <Label Text="Update Event"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=#222, Dark=#EEE}" />

            <!-- Дата события -->
            <Label Text="Date:" FontAttributes="Bold" />
            <DatePicker x:Name="eventDate"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#222}"
                        TextColor="{AppThemeBinding Light=Black, Dark=White}" />

            <!-- Время события -->
            <Label Text="Time:" FontAttributes="Bold" />
            <TimePicker x:Name="eventTime"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#222}"
                        TextColor="{AppThemeBinding Light=Black, Dark=White}" />

            <!-- Описание события -->
            <Label Text="Description:" FontAttributes="Bold" />
            <Editor x:Name="eventDescription"
                    HeightRequest="100"
                    BackgroundColor="{AppThemeBinding Light=White, Dark=#222}"
                    TextColor="{AppThemeBinding Light=Black, Dark=White}" />

            <!-- Место события -->
            <Label Text="Location:" FontAttributes="Bold" />
            <Entry x:Name="eventLocation"
                   Placeholder="Enter location"
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#222}"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}" />

            <!-- Кнопки сохранения и отмены -->
            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                <Button Text="Save"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        WidthRequest="100"
                        Clicked="SaveButton_Clicked" />

                <Button Text="Cancel"
                        BackgroundColor="#E53935"
                        TextColor="White"
                        WidthRequest="100"
                        Clicked="CancelButton_Clicked" />
            </HorizontalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
