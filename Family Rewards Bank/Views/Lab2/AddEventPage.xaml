<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:vm="clr-namespace:Family_Rewards_Bank.ViewModels"
             x:Class="Family_Rewards_Bank.AddEventPage"
             Title="Add Event"
             BackgroundColor="{AppThemeBinding Light=#F9F9F9, Dark=#121212}">

    <ContentPage.BindingContext>
        <vm:AddEventViewModel />
    </ContentPage.BindingContext>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <!-- Заголовок -->
            <Label Text="Create New Event"
                   FontSize="24"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="{AppThemeBinding Light=#222, Dark=#EEE}" />

            <!-- Дата -->
            <Label Text="Date:" FontAttributes="Bold" />
            <DatePicker Date="{Binding Date}"
                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#222}" />

            <!-- Время -->
            <Label Text="Time:" FontAttributes="Bold" />
            <TimePicker Time="{Binding Time}"
                        TextColor="{AppThemeBinding Light=Black, Dark=White}"
                        BackgroundColor="{AppThemeBinding Light=White, Dark=#222}" />

            <!-- Описание -->
            <Label Text="Description:" FontAttributes="Bold" />
            <Editor Text="{Binding Description}"
                    HeightRequest="100"
                    TextColor="{AppThemeBinding Light=Black, Dark=White}"
                    BackgroundColor="{AppThemeBinding Light=White, Dark=#222}" />

            <!-- Локация -->
            <Label Text="Location:" FontAttributes="Bold" />
            <Entry Text="{Binding Location}"
                   Placeholder="Enter location"
                   TextColor="{AppThemeBinding Light=Black, Dark=White}"
                   BackgroundColor="{AppThemeBinding Light=White, Dark=#222}" />

            <!-- Кнопки -->
            <HorizontalStackLayout Spacing="15" HorizontalOptions="Center">
                <Button Text="Save"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        WidthRequest="100"
                        Command="{Binding SaveAsyncCommand}" />

                <Button Text="Cancel"
                        BackgroundColor="#E53935"
                        TextColor="White"
                        WidthRequest="100"
                        Command="{Binding CancelAsyncCommand}" />
            </HorizontalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
